<div class="card-body">
  <div class="form-group">
    <%= form.file_field :img, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :usage_date, "利用年月日", class: "form-label" %>
    <%= form.date_field :usage_date, value: Date.today, class: "form-control" %>
    <% if @receipt.errors.include?(:usage_date) %>
      <span class="help-block"><%= @receipt.errors.full_messages_for(:usage_date).first %></span>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :price, "金額", class: "form-label" %>
    <%= form.number_field :price, class: "form-control" %>
    <% if @receipt.errors.include?(:usage_date) %>
      <span class="help-block"><%= @receipt.errors.full_messages_for(:price).first %></span>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :usage, "用途", class: "form-label" %>
    <%= form.text_field :usage, class:"form-control" %>
    <% if @receipt.errors.include?(:usage) %>
      <span class="help-block"><%= @receipt.errors.full_messages_for(:usage).first %></span>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :publisher, "発行元", class: "form-label" %>
    <%= form.text_field :publisher, class:"form-control" %>
    <% if @receipt.errors.include?(:publisher) %>
      <span class="help-block"><%= @receipt.errors.full_messages_for(:publisher).first %></span>
    <% end %>
  </div>
  <%= hidden_field_tag :user_id, @receipt.user_id %>
  <div class="card-footer">
    <%= form.submit value="登録", class:"btn btn-secondary" %>
  </div>
</div>